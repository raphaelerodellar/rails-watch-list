<div class="banner">
  <h1>The <%= @list.name %> movies</h1>
</div>
<ul>
  <div class="row">
    <% @list.bookmarks.each do |bookmark| %>
      <div class= "col-6">
        <li class="card-film">
          <img src="<%= bookmark.movie.poster_url %>">
          <div class="card-product-infos">
            <h2><%= bookmark.movie.title %> - <%= bookmark.movie.rating %> ⭐️</h2>
            <p><%= bookmark.movie.overview %></p>
            <p>‟ <%= bookmark.comment %></p>
            <%= link_to "Delete this bookmark",
              list_path(@list),
              data: {turbo_method: :Delete, turbo_confirm: "Are you sure?"}
            %>
          </div>
        </li>
      </div>
    <% end %>
  </div>
</ul>
<div><%= link_to "Add a new movie to the list", new_list_bookmark_path(@list) %></div>
<div><%= link_to "Back to All the lists", lists_path %></div>
